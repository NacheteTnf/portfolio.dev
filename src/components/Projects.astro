---
import GitHub from "./icons/GitHub.astro";
import NextJS from "./icons/NextJS.astro";
import React from "./icons/React.astro";
import Tailwind from "./icons/Tailwind.astro";
import Link from "./icons/Link.astro";
import LinkButton from "./LinkButton.astro";

const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: NextJS,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },
  REACT: {
    name: "React.js",
    class: "bg-black text-white",
    icon: React,
  },
};
const PROJECTS = [
  {
    title: "Gericht - Pagina web de un restaurante usando una interfaz bonita",
    description:
      "Pagina web de un restaurante usando las mejores practicas y un interfaz increible. Creado desde cero con React y Tailwind CSS.",
    link: "https://restaurant-gerichts.netlify.app/",
    github: "https://github.com/NacheteTnf/Gericht-restaurant",
    image: "/projects/gericht.webp",
    tags: [TAGS.REACT, TAGS.TAILWIND],
  },
  {
    title:
      "CryptoPrice - Cotizador a tiempo real de criptos en distintas divisas",
    description:
      "Cotizador cripto a tiempo real consumiendo una API. Creada desde cero con React.js",
    link: "https://cripto-check.vercel.app/",
    github: "https://github.com/NacheteTnf/cripto-check/",
    image: "/projects/cryptojs.webp",
    tags: [TAGS.REACT],
  },
  {
    title: "CarHub - Pagina web para buscar y rentar tu coche ideal",
    description:
      "Pagina web donde podras buscar distintas marcas y modelos de coche. Encontraras el consumo, transmision y traccion!. Creado desde cero con Next.js, React y Tailwind CSS.",
    link: "https://car-hub-iota-puce.vercel.app/",
    github: "https://github.com/NacheteTnf/car_hub",
    image: "/projects/carhub.webp",
    tags: [TAGS.NEXT, TAGS.TAILWIND],
  },
];

---

<style>
.swiper {
	width: 100%;
}

.swiper-slide {
	width: 100%;
	height: 100%;
	display: flex;
}

.pagination-container {
	top:-200px;
	position: relative;
}

.pagination-container .swiper-button-next{
	top:0;
	right:-50px;
	color: rgb(250 204 21 / var(--tw-text-opacity));
}

.pagination-container .swiper-button-prev{
	top:0;
	left:-50px;
	color: rgb(250 204 21 / var(--tw-text-opacity));
}
</style>

<div class="flex flex-col gap-y-16">

	<div class="swiper mySwiper">

		<div class="swiper-wrapper ">

			{
				PROJECTS.map(({ image, title, description, tags, link, github }) => (
				<article class="swiper-slide flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
					<div class="w-full md:w-1/2">
						<div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform  overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
							<img
							alt="Recién llegado vs 5 años en Nueva Zelanda"
							class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105"
							loading="lazy"
							src={image}
							/>
						</div>
					</div>

					<div class="w-full md:w-1/2 md:max-w-lg">
					<h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
						{title}
					</h3>
					<div class="flex flex-wrap mt-2">
						<ul class="flex flex-row mb-2 gap-x-2">
						{tags.map((tag) => (
							<li>
							<span
								class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
							>
								<tag.icon class="size-4" />
								{tag.name}
							</span>
							</li>
						))}
						</ul>

						<div class="mt-2 text-gray-700 dark:text-gray-400">
						{description}
						</div>
						<footer class="flex items-end justify-start mt-4 gap-x-4">
						{github && (
							<LinkButton href={github}>
							<GitHub class="size-6" />
							Code
							</LinkButton>
						)}
						{link && (
							<LinkButton href={link}>
							<Link class="size-4" />
							Preview
							</LinkButton>
						)}
						</footer>
					</div>
					</div>
				</article>
				))
			}

		</div>

	</div>

	<div class="pagination-container">

		<div class="swiper-button-next"></div>
		<div class="swiper-button-prev"></div>

	</div>

</div>

<script>
	import Swiper from 'swiper/bundle';
  	import 'swiper/css';
  	import 'swiper/css/navigation';

    new Swiper('.mySwiper', {
      navigation: {
        nextEl: '.swiper-button-next',
        prevEl: '.swiper-button-prev',
      },
    });
</script>
